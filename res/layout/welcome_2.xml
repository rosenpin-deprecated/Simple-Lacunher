<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_launcher" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:layout_marginTop="66dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue "
            android:id="@+id/go" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="53dp" android:background="#ff4c8eff" android:paddingLeft="40dp"
            android:paddingRight="40dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick your favorites applications first"
            android:id="@+id/choose_fav_apps" android:layout_centerVertical="true" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" android:checked="true"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable smart eventing built in"
            android:id="@+id/enable_smart_event"
            android:layout_below="@+id/choose_fav_apps" android:layout_alignParentStart="true"
            android:layout_marginTop="49dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>